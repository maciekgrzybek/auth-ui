{
  "extends": "../tsconfig/react-library.json",
  "compilerOptions": {
    "importHelpers": false,
    "resolveJsonModule": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "noEmit": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}
